<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewsuccess"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/lin_profile"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:paddingTop="5dp">

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/vendor_name"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:text="Sun Stitchhing"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/ptxtnumber"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:text="102566635"
                        android:textColor="@color/red" />

                </TableRow>

                <TableRow android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    >

                    <FrameLayout  android:layout_width="0dp"

                        android:layout_weight="50">
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"

                            android:id="@+id/rc_art"


                            android:layout_height="match_parent" />
                        <FrameLayout
                            android:layout_width="match_parent"

                            android:id="@+id/frame1"


                            android:layout_height="match_parent" />

                    </FrameLayout>
                </TableRow>

                <TableRow android:layout_marginBottom="10dp">


                </TableRow>

            </TableLayout>

            <com.eleganzit.vkcvendor.VerticalTextView
                android:id="@+id/txtRegister"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"

                android:rotation="180"
                android:text="VIEW DETAILS"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"/>


    </FrameLayout>

</android.support.v7.widget.CardView>